{
  "name": "TurboVNC Desktop",
  "build": { "dockerfile": "Dockerfile" },
  "runArgs": ["--cap-add=SYS_PTRACE", "--security-opt", "seccomp=unconfined"],
  "features": {
    "ghcr.io/devcontainers/features/desktop-lite:1": {}
  },
  "forwardPorts": [6080],
  "portsAttributes": {
    "6080": {
      "label": "noVNC Desktop",
      "onAutoForward": "openBrowser",
      "onAutoForward": "openBrowser"
    }
  },
  "postCreateCommand": "echo 'TurboVNC ready! Password = 123456 (change with vncpasswd)'"
}
